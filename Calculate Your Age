#include <iostream>
using namespace std;

int main()
{

cout << "======================\n";
cout << "===calculate my age====\n";
cout << "========================\n";
int age;
cin >> age;


int age_in_days = age * 365;
int age_in_hours = age_in_days * 24;

cout << "age in days: " << age_in_days << "days\n";
cout << "age in hours: " << age_in_hours << "hours\n";


return 0;
} 
